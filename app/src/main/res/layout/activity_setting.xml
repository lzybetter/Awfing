<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/clockBackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <CheckBox
        android:id="@+id/isLoadImage_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/setting_title"
        android:text="无图模式"
        android:background="?attr/clockBackground"
        android:textColor="?attr/clockTextColor"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <CheckBox
        android:id="@+id/noPictureSmart_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/isLoadImage_check"
        android:text="智能无图"
        android:background="?attr/clockBackground"
        android:textColor="?attr/clockTextColor"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/isDayorNight_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/noPictureSmart_check"
        android:text="夜间模式"
        android:background="?attr/clockBackground"
        android:textColor="?attr/clockTextColor"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <Button
        android:id="@+id/about_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="关于本软件"
        android:background="?attr/clockBackground"
        android:textColor="?attr/clockTextColor"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

</RelativeLayout>
